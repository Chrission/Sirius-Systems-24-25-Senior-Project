@model StorkDorkMain.Models.Checklist

<h2>Delete Checklist</h2>
<p>Are you sure you want to delete this checklist?</p>

<div>
    <h3>@Model.ChecklistName</h3>
    <p><strong>User:</strong> @Model.SdUser.FirstName</p>

    <h4>Birds in this checklist:</h4>
    @if (Model.ChecklistItems.Any())
    {
        <ul>
            @foreach (var item in Model.ChecklistItems)
            {
                <li>@item.Bird.CommonName (@item.Bird.ScientificName)</li>
            }
        </ul>
    }
    else
    {
        <p>No birds in this checklist.</p>
    }
</div>

<form asp-action="Delete" method="post">
    <input type="hidden" name="id" value="@Model.Id" />
    <button type="submit" class="btn btn-danger">Delete</button>
    <a asp-action="Index" asp-route-userId="@Model.SdUserId" class="btn btn-secondary">Cancel</a>
</form>


