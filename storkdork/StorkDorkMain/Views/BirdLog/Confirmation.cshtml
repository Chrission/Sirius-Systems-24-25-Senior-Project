@{
    ViewData["Title"] = "Log Created Successfully";
    bool hasPhoto = ViewBag.HasPhoto ?? false; // Default to false if null
}

@if (hasPhoto)
{
    <div class="mt-4">
        <h4>Uploaded Photo</h4>
        <img src="@Url.Action("GetSightingImage", "BirdLog", new { id = Model.Id })" 
             class="img-thumbnail" style="max-height: 300px;" />
    </div>
}

<div class="container mt-5">
    <div class="card">
        <div class="card-body text-center">
            <h1 class="card-title">ðŸŽ‰ Log Created Successfully!</h1>
            <p class="card-text">What would you like to do next? <strong>@ViewBag.UserName</strong></p>

            <a href="@Url.Action("Index", new { userId = ViewBag.UserId })" class="btn btn-primary">View Logs</a>
            <a href="@Url.Action("Create", new { userId = ViewBag.UserId })" class="btn btn-secondary">Log Another Sighting</a>
        </div>
    </div>
</div>

@if (ViewBag.UpdatedChecklistCount > 0)
{
    <div class="alert alert-success mt-3">
        <i class="bi bi-check-circle-fill"></i>
        This bird was automatically marked as sighted in @ViewBag.UpdatedChecklistCount of your checklists!
    </div>
}

@if (ViewBag.CompletedChecklistCount > 0)
{
    <div class="alert alert-info mt-3">
        <i class="bi bi-trophy-fill"></i>
        <strong>Great job!</strong> You completed @ViewBag.CompletedChecklistCount 
        @(ViewBag.CompletedChecklistCount == 1 ? "checklist" : "checklists") with this sighting!
        Check your notifications for details.
    </div>
}