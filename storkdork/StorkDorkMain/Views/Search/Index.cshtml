@model IEnumerable<StorkDorkMain.Models.Bird>

<div class="container mt-4">
    <h2>Search Birds</h2>
    
    <form asp-controller="Search" asp-action="SearchBirds" method="get" class="mb-4">
        <div class="input-group">
            <input type="text" name="searchTerm" class="form-control" placeholder="Enter bird name...">
            <button type="submit" class="btn btn-primary">Search</button>
        </div>
    </form>

    @if (Model != null && Model.Any())
    {
        <div class="row">
            @foreach (var bird in Model)
            {
                <div class="col-md-4 mb-3">
                    <div class="card">
                        <div class="card-body">
                            <h5 class="card-title">@bird.CommonName</h5>
                            <h6 class="card-subtitle mb-2 text-muted">@bird.ScientificName</h6>
                            <a href="@Url.Action("Details", "Bird", new { id = bird.Id })" class="btn btn-sm btn-info">View Details</a>
                        </div>
                    </div>
                </div>
            }
        </div>
    }
    else if (Model != null)
    {
        <p>No birds found matching your search.</p>
    }
</div>