<!-- Bootstrap JS -->
<script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.2/dist/js/bootstrap.bundle.min.js"></script>
</body>
</html>


<script>
    function redirectToSearchPage(event) {
        event.preventDefault();
        const searchTerm = document.getElementById("homepageSearchInput").value.trim();
        if (searchTerm) {
            const encodedTerm = encodeURIComponent(searchTerm);
            window.location.href = `/search/birds?searchTerm=${encodedTerm}&searchType=name`;
        } else {
            alert("Please enter a bird name.");
        }
        return false;
    }
</script>
